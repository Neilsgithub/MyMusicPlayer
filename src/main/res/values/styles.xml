<resources>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/SplashAnimation</item>
    </style>

    <style name="MainActivityTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowAnimationStyle">@style/AppAnimation</item>
        <item name="switchStyle">@style/switch_light</item>
        <item name="textAppearance">@style/TextAppearance</item>
    </style>

    <style name="AppAnimation" parent="android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_exit</item>
    </style>

    <style name="SplashAnimation" parent="android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_splash_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_splash_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_exit</item>
    </style>

    <style name="viewMusicListBannerLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">#699dce</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="textViewMusicListBanner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#f8f8f8</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="textViewMainBanner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">6dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="imageViewMusicControler">
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">12dp</item>
    </style>
</resources>
